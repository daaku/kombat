{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "strictBindCallApply": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
